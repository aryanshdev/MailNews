<div
  class="bg-slate-900 bg-opacity-35 backdrop-blur-md my-5 rounded-md border-solid border-white border w-auto mx-5 text-center p-3"
>
  <a href="<%= newsLink %>">
    <h1 class="font-bold text-lg capitalize text-white duration-300 "><%= newsHeading %></h1>
  </a>
  <br />
  <div class="text-left grid-flow-row  grid grid-cols-5 items-center">
    <p class="col-span-5 lg:col-span-3 py-2 text-white normal-case lg:pr-5 my-auto"><%= newsContent %></p>
    <img
      class="col-span-5 lg:col-span-2 -order-1 lg:order-1 w-full overflow-clip max-h-[20.5rem] object-cover text-white"
      src="<%= newsImgSrc %>"
      alt="<%= newsHeading %>"
    />
  </div>
  <button
    onclick="window.location.href='<%= newsLink %>'"
    class="bg-white rounded-full py-2 px-5 font-semibold"
  >
    Full Coverage
  </button>
</div>
