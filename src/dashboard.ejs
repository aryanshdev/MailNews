      input[type="time"]::-webkit-calendar-picker-indicator {
        content: url('https://img.icons8.com/ios-glyphs/100/ffffff/clock--v1.png' );
      }
    </style>
    <script>
      var currentPopUpTimeoutID;
      function showPopup(textMessage, type = "info", durartion = 5000) {
        clearTimeout(currentPopUpTimeoutID);
        if (type === "err") {
          popup.style.backgroundColor = "rgb(153, 27, 27)";
        } else if (type === "info") {
          popup.style.backgroundColor = "rgb(29, 78, 216)";
        } else if (type === "warn") {
          popup.style.backgroundColor = "rgb(202, 138, 4)";
        }
        popup.textContent = textMessage;
        popup.classList.add("mr-7");
        popup.classList.remove("translate-x-100");

        currentPopUpTimeoutID = setTimeout(() => {
          popup.classList.remove("mr-7");
          popup.classList.add("translate-x-100");
        }, durartion);
      }

      document.getElementById("greeting").textContent =
        new Date().getHours() < 12
          ? "Morning"
          : new Date().getHours() < 16
          ? "Afternoon"
          : "Evening";
      var selectedTopicsList = "<%= selectedTopicsString %>".split(",");
      selectedTopicsList.forEach((topic) => {
        document.querySelector(`input[value="${topic}"]`).checked = true;
      });

      function updateTopicList(onlyReturn = false) {
        var topicList = [];
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach((checkbox) => {
          if (checkbox.checked) {
            topicList.push(checkbox.value);
          }
        });

        if (!onlyReturn) {
          if (
            topicList.sort().toString() !==
              selectedTopicsList.sort().toString() &&
            topicList.length > 0
          ) {
            console.log("enable");
            document
              .querySelector("#topicUpdateButton")
              .removeAttribute("disabled");
          } else {
            console.log("disable");
            document
              .querySelector("#topicUpdateButton")
              .setAttribute("disabled", "disabled");
          }
        } else {
          return topicList;
        }
      }
      function updateTopics() {
        var topicList = updateTopicList(true).join(",");
        fetch("/updateTopics", {
          method: "POST",
          body: new URLSearchParams({ topics: topicList }),
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        }).then((res) => {
          console.log(res);
          if (res.status === 200) {
            showPopup("News Topics Updated Successfully", "info");
            document
              .querySelector("#topicUpdateButton")
              .setAttribute("disabled", "disabled");
          } else if (res.status === 401) {
            showPopup("Session Expired ! \nPlease Login Again", "warn");
            setTimeout(() => {
              window.location.href = "/login";
            }, 2500);
          } else {
            showPopup("Failed to Update Topics", "err");
          }
        });
      }
    </script>
