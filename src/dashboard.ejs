          </svg>
          <%- googleAuth ? 'Connected' : 'Connect' %>
            </button>
            <p class="mt-3">Click button to <%- googleAuth ? 'Disconnect' : 'Connect' %> </p>
            <h3 class="font-bold text-xl mt-3 text-white">Change Name </h3>
            <form action="javascript:submitNameChange()">
              <input type="text"
                class="border-slate-800 border-2 border-solid rounded-lg mt-3 p-2 outline-none lg:p-2 w-full md:w-1/2 bg-slate-800 focus:bg-slate-700 duration-200 mb-2 text-white font-semibold"
                required placeholder="Enter New Name">
              <button type="submit"
                class="!bg-slate-700 ml-3 text-white rounded-full px-9 py-2 lg:px-4 lg:py-2 mt-1 font-semibold text-lg disabled:opacity-75">Change</button>
            </form>

            <h3 class="font-bold text-xl mt-3 text-white">Change Account Password </h3>
            <form action="javascript:submitPasswordChange()">
              <div class="w-full flex flex-row flex-wrap gap-2">
                <input type="text"
                  class="border-slate-800 inline border-2 border-solid  rounded-lg mt-3 p-2 outline-none lg:p-2 w-full md:w-1/2 bg-slate-800 focus:bg-slate-700 duration-200 mb-2 text-white font-semibold"
                  onchange="javascript:updatePasswordButton()" required name="oldPass"
                  placeholder="Enter Current Password">
                <input type="text"
                  class="border-slate-800 inline border-2 border-solid rounded-lg p-2 outline-none lg:p-2 w-full md:w-1/2 bg-slate-800 focus:bg-slate-700 duration-200 mb-2 text-white font-semibold"
                  onchange="javascript:updatePasswordButton()" required name="newPass" placeholder="Enter New Password">
              </div>
              <p class="mb-5 text-slate-300 font-light text-sm transition-all duration-200" id="password-hint">
                Password Should Be Atleast 6 Characters And Contain Letters, Atleast
                1 Symbol and 1 Number
              </p>
              <button type="submit" id="passwordUpdateButton" disabled="disabled"
                class="!bg-slate-700  text-white rounded-full px-9 py-2 lg:px-4 lg:py-2 mt-1 font-semibold text-lg disabled:opacity-75">Change</button>
            </form>
            <div class="text-center my-10"><button type="button" onclick="javascript:window.location.href='/logout'"
                class="!bg-slate-700  text-white rounded-full px-9 py-2 lg:px-4 lg:py-2 mt-1 font-semibold text-lg disabled:opacity-75">Logout</button>
            </div>
            <div class="text-center mt-20 p-2">
              <h1 class="font-bold text-2xl">Danger Zone</h1>
              <button onclick="javascript:DeleteAccountAskConfirm()" id="DeleteAccountButton"
                class="!bg-red-700 mt-5 mb-5 text-white rounded-full px-9 py-2 lg:px-4 lg:py-2  font-semibold text-lg disabled:opacity-75 self-center">Delete
                Account</button>
            </div>
      </div>
    </div>
    <style>
      input[type="time"]::-webkit-calendar-picker-indicator {
        content: url("https://img.icons8.com/ios-glyphs/100/ffffff/clock--v1.png");
      }
    </style>
    <script>
      document
        .getElementById("navbar-solid-bg-btn")
        .addEventListener("click", function () {
          document.getElementById("mobile-menu").classList.toggle("hidden");
          document.getElementById("arrow-left").classList.toggle("hidden");
          document.getElementById("arrow-right").classList.toggle("hidden");
        });

      var currentPopUpTimeoutID;
      function showPopup(textMessage, type = "info", durartion = 5000) {
        clearTimeout(currentPopUpTimeoutID);
        if (type === "err") {
          popup.style.backgroundColor = "rgb(153, 27, 27)";
        } else if (type === "info") {
          popup.style.backgroundColor = "rgb(29, 78, 216)";
        } else if (type === "warn") {
          popup.style.backgroundColor = "rgb(202, 138, 4)";
        }
        popup.textContent = textMessage;
        popup.classList.add("mr-7");
        popup.classList.remove("translate-x-100");

        currentPopUpTimeoutID = setTimeout(() => {
          popup.classList.remove("mr-7");
          popup.classList.add("translate-x-100");
        }, durartion);
      }

      document.getElementById("greeting").textContent =
        new Date().getHours() < 12
          ? "Morning"
          : new Date().getHours() < 16
            ? "Afternoon"
            : "Evening";

            var d = new Date();
      console.log(<%= timeSlot %>);
      d.setUTCHours(parseInt(<%= timeSlot %>/2) ,  parseInt(<%= timeSlot %>/2) == (<%= timeSlot %>/2) ? 0 : 30 , 0, 0);
      document.getElementById("time").value = (d.getHours() > 9 ? d.getHours() : '0' + d.getHours()) + ":" + (d.getMinutes() > 9 ? d.getMinutes() : '0' + d.getMinutes());

      function updateTimeButton() {
        if (document.getElementById("time").value !== (d.getHours() > 9 ? d.getHours() : '0' + d.getHours()) + ":" + (d.getUTCMinutes() > 9 ? d.getUTCMinutes() : '0' + d.getUTCMinutes())) {
          document
            .querySelector("#timeUpdateButton")
            .removeAttribute("disabled");
        }

        else {
          document
            .querySelector("#timeUpdateButton")
            .setAttribute("disabled", "disabled");
        }
      }

      var selectedTopicsList = "<%= selectedTopicsString %>".split(",");
      selectedTopicsList.forEach((topic) => {
        document.querySelector(`input[value="${topic}"]`).checked = true;
      });

      function submitPasswordChange() {
        var oldPass = document.querySelector('input[name="oldPass"]').value;
        var newPass = document.querySelector('input[name="newPass"]').value;
        fetch("/changePass", {
          method: "POST",
          body: new URLSearchParams({ oldPass: oldPass, newPass: newPass }),
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        }).then((res) => {
          console.log(res);
          if (res.status === 200) {
            showPopup("Password Updated Successfully", "info");
          } else if (res.status === 400) {
            showPopup("Current Password Wrong ! \nPlease Check And Try Again", "warn");
          } else if (res.status === 401) {
            showPopup("Session Expired ! \nPlease Login Again", "warn");
            setTimeout(() => {
              window.location.href = "/login";
            }, 2500);
          }
          else {
            showPopup("Failed to Update Password", "err");
          }
        });
      }

      function updateTime() {
        var time = document.getElementById("time").value;
        var d = new Date();
        d.setHours(time.split(":")[0], time.split(":")[1], 0, 0);
        fetch("/updateSlot", {
          method: "POST",
          body: new URLSearchParams({ timeSlot: parseInt(d.getUTCHours()*2 + parseInt(d.getUTCMinutes() / 30)) }),
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        }).then((res) => {
          console.log(res);
          if (res.status === 200) {
            showPopup("Mailing Time Updated Successfully", "info");
            document
              .querySelector("#timeUpdateButton")
              .setAttribute("disabled", "disabled");
          } else if (res.status === 401) {
            showPopup("Session Expired! \nPlease Login Again", "warn");
            setTimeout(() => {
              window.location.href = "/login";
            }, 2500);
          } else {
            showPopup("Failed to Update Mailing Time", "err");
          }
        });
      }

      function updateTopicList(onlyReturn = false) {
        var topicList = [];
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach((checkbox) => {
          if (checkbox.checked) {
            topicList.push(checkbox.value);
          }
        });

        if (!onlyReturn) {
          if (
            topicList.sort().toString() !==
            selectedTopicsList.sort().toString() &&
            topicList.length > 0
          ) {
            console.log("enable");
            document
              .querySelector("#topicUpdateButton")
              .removeAttribute("disabled");
          } else {
            console.log("disable");
            document
              .querySelector("#topicUpdateButton")
              .setAttribute("disabled", "disabled");
          }
        } else {
          return topicList;
        }
      }
      function updateTopics() {
        var topicList = updateTopicList(true).join(",");
        fetch("/updateTopics", {
          method: "POST",
          body: new URLSearchParams({ topics: topicList }),
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        }).then((res) => {
          console.log(res);
          if (res.status === 200) {
            showPopup("News Topics Updated Successfully", "info");
            document
              .querySelector("#topicUpdateButton")
              .setAttribute("disabled", "disabled");
          } else if (res.status === 401) {
            showPopup("Session Expired ! \nPlease Login Again", "warn");
            setTimeout(() => {
              window.location.href = "/login";
            }, 2500);
          } else {
            showPopup("Failed to Update Topics", "err");
          }
        });
      }

      function updatePasswordButton() {
        var oldPass = document.querySelector('input[name="oldPass"]');
        var newPass = document.querySelector('input[name="newPass"]');
        if (oldPass.value.length > 6 && newPass.value.length > 6 && /(?=^.*[A-Za-z])(?=^.*\d)(?=^.*[!@#$%^&*+.-])^.+$/.test(newPass.value)) {
          oldPass.style.border = "2px solid rgb(34, 197, 94)";
          newPass.style.border = "2px solid rgb(34, 197, 94)";
          document
            .querySelector("#passwordUpdateButton")
            .removeAttribute("disabled");
        } else {
          oldPass.style.border = "2px solid red";
          newPass.style.border = "2px solid red";
          document
            .querySelector("#passwordUpdateButton")
            .setAttribute("disabled", "disabled");
        }
      }

      function submitNameChange() {
        var name = document.querySelector('input[type="text"]').value;
        fetch("/changeName", {
          method: "POST",
          body: new URLSearchParams({ name: name }),
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        }).then((res) => {
          console.log(res);
          if (res.status === 200) {
            showPopup("Name Updated Successfully", "info");
          } else if (res.status === 401) {
            showPopup("Session Expired ! \nPlease Login Again", "warn");
            setTimeout(() => {
              window.location.href = "/login";
            }, 2500);
          } else {
            showPopup("Failed to Update Name", "err");
          }
        });
      }

      function DeleteAccountAskConfirm() {
        showPopup("Are You Sure You Want To Delete Your Account ?! Select Delete Account Again To Delete", "warn", 10000);
        document.getElementById("DeleteAccountButton").setAttribute("onclick", "javascript:DeleteAccount()");
        setTimeout(() => {
          document.getElementById("DeleteAccountButton").setAttribute("onclick", "javascript:DeleteAccountAskConfirm()");
        }, 10000);
      }
      function DeleteAccount() {
        fetch("/deleteAccount", {
          method: "POST",
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        }).then((res) => {
          console.log(res);
          if (res.status === 200) {
            showPopup("Account Deleted Successfully", "info");
            setTimeout(() => {
              window.location.href = "/login";
            }, 2500);
          } else if (res.status === 401) {
            showPopup("Session Expired ! \nPlease Login Again", "warn");
            setTimeout(() => {
              window.location.href = "/login";
            }, 2500);
          } else {
            showPopup("Failed to Delete Account", "err");
          }
        });
      }

    </script>
